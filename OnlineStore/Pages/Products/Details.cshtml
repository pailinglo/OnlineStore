@page
@model OnlineStore.Pages.Products.DetailsModel
@{
    ViewData["Title"] = "Details";
    ViewData["ShowButtons"] = false;
}

<h1>Product</h1>
<div class="row">
    <div class="col-lg-4">
        <partial name="_DisplayProductPartial" model="@Model.Product" view-data="ViewData" />
    </div>
    <div class="col-lg-4 mt-3">
        <form method="post">
            <h5>@Model.Product.Description</h5>
            <button class="btn btn-primary">Add to Cart</button>
            <a asp-page="/Products/Index" class="btn btn-primary">Back to Products</a>
        </form>
    </div>
</div>
